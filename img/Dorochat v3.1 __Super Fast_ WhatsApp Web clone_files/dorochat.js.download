//custom Selector handlers
function DORO(selector){
 let el = {};
 el.selector = selector;
 el.element = document.getElementById(el.selector);
 el.val = function(){
  return el.element.value;
 }
 el.sel = function(){
 	return el.element;
 }
 el.audio = function(file){
  let audio = new Audio(file);
  audio.play();
 }
 return el;
}


