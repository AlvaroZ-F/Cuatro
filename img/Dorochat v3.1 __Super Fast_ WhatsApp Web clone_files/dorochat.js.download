//add New Message to Message Array
this.addMessage = function(chatid,uid,time,msg,Sentfrom,me){
 this.coID = chatid;
 this.crUserFK = uid;
 this.time = time;
 this.crReply = msg;
 this.seen = false;
 this.sender = me;
 this.from = Sentfrom;
 currentChatMessages.push(this);
 activeChat(chatid);
 updateDom(chatid,msg);
 return currentChatMessages;
}
